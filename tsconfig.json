{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "jest", "nock"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
